{
    "name": "kairos-project/api-formatter",
    "description": "The API response formatter component for the Kairos API project part.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "matthieu vallance",
            "email": "matthieu.vallance@cscfa.fr"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "kairos-project/api-controller": "^1@dev"
    },
	"require-dev" : {
		"infection/infection" : "^0.8.2",
		"phpmd/phpmd" : "^2.6",
		"phpmetrics/phpmetrics" : "^2.3",
		"phpunit/phpunit" : "^7.2",
		"sebastian/phpcpd" : "^4",
		"squizlabs/php_codesniffer" : "^3.3",
		"kairos-project/tests": "^1@dev",
		"zendframework/zend-diactoros" : "^1.8"
	},
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
	},
	"autoload" : {
		"psr-4" : {
			"KairosProject\\ApiFormatter\\" : "KairosProject/ApiFormatter/"
		}
	},
	"suggest" : {
		"zendframework/zend-diactoros" : "To use the built-in response factory"
	}
}
